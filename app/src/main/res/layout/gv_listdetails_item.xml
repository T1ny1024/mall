<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_listdetails"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_title_listdetails"
        android:layout_width="wrap_content"
        android:layout_margin="4dp"
        android:textSize="14sp"
        android:textColor="#cfcdcd"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_nowprice_listdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#da0e0e"/>
        <TextView
            android:id="@+id/tv_price_listdetails"
            android:layout_toRightOf="@id/tv_nowprice_listdetails"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#cfcdcd"
            android:textSize="13dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sales_listdetails"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#cfcdcd"
            android:textSize="13dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
